{
  "name": "tess",
  "version": "0.1.0",
  "type": "module",
  "description": "TCP/UDP Echo Server Solution (TESS) is a simple server that listens on TCP and UDP ports and sends back (echoes) whatever was sent on a specific port. It is intended to troubleshoot network connectivity issues.",
  "main": "index.js",
  "scripts": {
    "start": "node --experimental-modules src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "author": "Marcello Pires Alves (@Atharr)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Atharr/tess.git"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "transform": {}
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "js-yaml": "^4.1.0",
    "net": "^1.0.2"
  },
  "devDependencies": {
    "jest": "^29.6.1"
  }
}
